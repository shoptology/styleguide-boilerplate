extends structure/_includes/_layout
block styles
	link(href='assets/styles/structure.css', rel='stylesheet')
	link(href='assets/styles/styleguide.css', rel='stylesheet')

block content
	include structure/_templates/_header.jade
	include structure/_templates/_sidebar.jade
	.shop-iframe-wrapper
		iframe(src="structure/pages/"+public._data.defaultPage+".html", frameborder="0", height="100%", width="100%")

block scripts
	script(src="structure/scripts/vendor/jquery-1.11.1.min.js")
	script(src="structure/scripts/styleguide.js")
	if !process.env.STYLEGUIDE_COMPILE
		script.
			document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')
